{
	// Editor UI
	"editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
	"window.zoomLevel": 1,
	"editor.rulers": [80],
	"workbench.activityBar.visible": false,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.statusBar.visible": true,
	"editor.minimap.enabled": false,
	"workbench.sideBar.location": "left",
	"workbench.colorTheme": "Boxy Ocean",
	"workbench.colorCustomizations": {
		"statusBar.background": "#1A1A1A",
		"statusBar.noFolderBackground": "#212121",
		"statusBar.debuggingBackground": "#263238"
	},
	//
	// Team tab
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	//
	// Exclude these files from showing
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/node_modules": true,
		".gitignore": true,
		"**/.vscode": true,
		"**/.meteor": true
	},
	//
	// eslint
	"prettier.eslintIntegration": true, // Use Prettier for eslint
	"editor.formatOnSave": true, // formats on save, this is super cool.
	"prettier.useTabs": true,
	"java.errors.incompleteClasspath.severity": "ignore",
	"breadcrumbs.enabled": true,
	"C_Cpp.default.cppStandard": "c++14",
	"C_Cpp.formatting": "Disabled",
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"git.enabled": false // eslint has no option to enable tabs, so I need to put this here for prettier
}
